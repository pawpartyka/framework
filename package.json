{
  "name": "@artisanjs/framework",
  "version": "0.0.7",
  "homepage": "https://artisanjs.org",
  "description": "Next generation framework for node.js",
  "author": "Pawe≈Ç Partyka",
  "license": "MIT",
  "files": [
    "dist/**/*"
  ],
  "main": "dist/public-api.js",
  "types": "dist/public-api.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artisanjs/artisan.git"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prebuild": "rimraf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register jest --runInBand",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "accepts": "^1.3.7",
    "cli-color": "^2.0.0",
    "co-body": "^6.1.0",
    "cookie": "^0.4.1",
    "cookies": "^0.8.0",
    "cron": "^1.8.2",
    "dotenv": "^8.2.0",
    "formidable": "^1.2.2",
    "is-stream": "^2.0.0",
    "matcher": "^4.0.0",
    "mime-types": "^2.1.30",
    "qs": "^6.10.1",
    "reflect-metadata": "^0.1.13",
    "serialize-error": "^8.0.1",
    "statuses": "^2.0.1",
    "type-is": "^1.6.18"
  },
  "devDependencies": {
    "@types/accepts": "^1.3.5",
    "@types/cli-color": "^2.0.0",
    "@types/co-body": "^5.1.0",
    "@types/cookie": "^0.4.0",
    "@types/cookies": "^0.7.6",
    "@types/cron": "^1.7.2",
    "@types/formidable": "^1.2.1",
    "@types/jest": "^26.0.22",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^14.14.37",
    "@types/qs": "^6.9.6",
    "@types/statuses": "^2.0.0",
    "@types/type-is": "^1.6.3",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.24.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix"
    }
  },
  "jest": {
    "coverageDirectory": "coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "src",
      "test"
    ],
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFiles": [
      "<rootDir>/node_modules/reflect-metadata/Reflect.js"
    ]
  }
}
