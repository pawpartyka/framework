{
  "name": "@artisanjs/http-server",
  "version": "0.0.7",
  "homepage": "https://artisanjs.io",
  "description": "Next generation framework for node.js",
  "author": "Pawe≈Ç Partyka",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artisanjs/artisan.git"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
    "prebuild": "rimraf dist",
    "start": "ts-node src/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register jest --runInBand",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "accepts": "^1.3.7",
    "co-body": "^6.0.0",
    "cookie": "^0.4.1",
    "cookies": "^0.8.0",
    "find-my-way": "^3.0.0",
    "formidable": "^1.2.2",
    "mime-types": "^2.1.26",
    "qs": "^6.9.3",
    "serialize-error": "^6.0.0",
    "statuses": "^2.0.0",
    "type-is": "^1.6.18"
  },
  "devDependencies": {
    "@artisanjs/common": "^0.0.7",
    "@artisanjs/core": "^0.0.7",
    "@types/accepts": "^1.3.5",
    "@types/co-body": "^5.1.0",
    "@types/cookie": "^0.3.3",
    "@types/cookies": "^0.7.4",
    "@types/formidable": "^1.0.31",
    "@types/jest": "^24.9.0",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^13.1.6",
    "@types/qs": "^6.9.1",
    "@types/statuses": "^1.5.0",
    "@types/type-is": "^1.6.3",
    "jest": "^24.9.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.6.1",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  },
  "peerDependencies": {
    "@artisanjs/common": "^0.0.1",
    "@artisanjs/core": "^0.0.1",
    "reflect-metadata": "^0.1.13"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
