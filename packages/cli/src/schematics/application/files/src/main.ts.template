import { ConfigPackage } from '@artisanjs/config';
import { Application, ArtisanFactory } from '@artisanjs/core';
import { AppService } from './services/app.service';

(async (): Promise<void> => {
  const application: Application = await ArtisanFactory
    .configureApplication({
      packages: [
        ConfigPackage
          .configure()
          .register(),
      ],
      providers: [
        AppService,
      ],
    })
    .compile();

  await application.listen();
})();
